	    int amount = 3000;
	    int month = 12;
	    double monthlypayment;
	    double totalpayment;
	    double sum;
	    
	    Scanner scan = new Scanner(System.in);
	    
	    System.out.println("Enter the yearly interest rate : " + rate);
	    
